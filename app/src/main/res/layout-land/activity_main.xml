<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/service_localization"
                android:textSize="20dp"
                android:id="@+id/txtService"
                android:background="#ff515151"
                android:textColor="#fffbf9ff"/>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img1"
                android:src="@drawable/police"
                android:layout_below="@id/txtService"/>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img2"
                android:src="@drawable/gasstation"
                android:layout_alignTop="@+id/img1"
                android:layout_alignLeft="@+id/img4"
                android:layout_alignStart="@+id/img4" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img3"
                android:src="@drawable/pharmacy"
                android:layout_alignTop="@+id/img2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img4"
                android:src="@drawable/hospital"
                android:layout_below="@id/img1"
                android:layout_alignRight="@id/img3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />/>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img5"
                android:src="@drawable/ambulance"
                android:layout_alignTop="@+id/img6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/img6"
                android:src="@drawable/firebrigade"
                android:layout_below="@+id/img1"
                android:layout_alignLeft="@+id/img3"
                android:layout_alignStart="@+id/img3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ff000000"
                android:layout_below="@id/img6"/>
    </RelativeLayout>
</ScrollView>
